<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">

        <item name="android:windowSplashScreenBehavior" tools:ignore="NewApi">icon_preferred</item>

        <item name="windowSplashScreenBackground">?attr/colorSecondaryVariant</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>

        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:navigationBarColor">?attr/colorSecondaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
</resources>